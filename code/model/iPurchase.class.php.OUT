namespace svelte\model;

/**
 * Interface to be shared by purchasable items.
 */
interface iPurchase
{
  /**
   * Get order id
   * @return int Order id
   */
  public function getOrderID() : int;

  /**
   * Get the total purchase price
   * @return float Total purchase price
   */
  public function getTotalPrice() : float;

  /**
   * Get the purchaser
   * @return \svelte\model\business\Person Purchaser
   */
  public function getPurchaser() : Person;

  /**
   * Set this purchase as PAID
   */
  public function setPaid();
}
